<div>
    <form>
      {{#unless readonly}}
        <button type="submit" class="btn btn-primary" {{action 'save'}}>
          <i class="fa fa-save"></i>
          Save
        </button>
      {{/unless}}

      <div class="form-group">
        <label for="first">First Name</label>
        {{input type="text" class="form-control" placeholder="First Name" value=contact.first autofocus="autofocus" readonly=readonly}}
      </div>

      <div class="form-group">
        <label for="first">Last Name</label>
        {{input type="text" class="form-control" placeholder="Last Name" value=contact.last readonly=readonly}}
      </div>

      <div class="form-group">
        <label for="first">Phone</label>
        {{input type="text" class="form-control" placeholder="999-999-999" value=contact.phone readonly=readonly}}
      </div>

    </form>
  </div>
